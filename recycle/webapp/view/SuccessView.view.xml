<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" controllerName="opensap.recycle.controller.LabelView1">

		<l:VerticalLayout width="100%">
		<l:content>
			<FlexBox alignItems="Center" justifyContent="Center" direction="Column">
				<items>
					<Text text="{i18n>ThankYouText}" class="sapUiTinyMargin headerLabel"/>
					<Text text="{i18n>InformationRecieved}" class=" headerLabel spacingBetweenText"/>
					<Text text="{i18n>ShareLocationNotBold}" />
					<Text text="{i18n>ShareLocationBold}" class="textBold spacingBetweenTextAndButton"/>
					<Button id="ShareSubmit" text="{i18n>ShareButtonText}"  class="buttonFullScreen" />
						<Button id="NoLocationSubmit" text="{i18n>NoLocationButtonText}"  class="buttonFullScreen spacingBetweenTextAndButton"/>
					<Text text="{i18n>LocationExplanationText}" class="sapUiSmallMargin"/>
					<Text text="{i18n>ExtraInfoLocationText}" class="sapUiSmallMargin textBold"/>
				</items>
				</FlexBox>
			</l:content>
		</l:VerticalLayout>

	</mvc:View>