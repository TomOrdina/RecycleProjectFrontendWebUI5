<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" controllerName="opensap.recycle.controller.LabelView1">
	<l:VerticalLayout width="100%">
		<l:content>
				
				<FlexBox alignItems="Center" justifyContent="Center" direction="Column">
					<items>
						<Text text="{i18n>LabelCode}" class="spacingBetweenTextAndHeader headerLabel"/>
							<Text text="{i18n>LabelFindCode}" class="sapUiSmallMargin"/>
						<Image src="images/LabelConfirmation1.png" width="300px" tooltip="label confirmation" class="spacingBetweenTextAndImage"/>
						<Text text="{i18n>LabelWarningMessage}"/>
					</items>
			
				<f:SimpleForm>
					<Label text="{i18n>LabelCodelbl}" labelFor="CodeLabel" design="Bold"/>
				<Input id="name" value="{i18n>LabelCodeInput}"/>
				<Button id="codeSubmit" text="{i18n>LabelButtonContinue}" />
				</f:SimpleForm>
				<Text text="{i18n>LabelScanningProblemtxt}"/>
						<Link href="https://zeroplasticrivers.com/" text="{i18n>LabelScanningProblemLinktxt}"/>
					</FlexBox>
		</l:content>
	</l:VerticalLayout>
</mvc:View>