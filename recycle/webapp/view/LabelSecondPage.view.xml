<mvc:View 
	controllerName="opensap.recycle.controller.LabelSecondPage" 
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
	xmlns:l="sap.ui.layout" 
	xmlns:f="sap.ui.layout.form">
	
	<l:VerticalLayout width="100%">
		<l:content>
			<FlexBox alignItems="Center" justifyContent="Center" direction="Column">
				<items>
					<Text text="{i18n>LabelIdentifier}" class="sapUiSmallMargin header"/>
					<Text text="{i18n>LabelFindIdentifier}" class="sapUiSmallMargin"/>
					<Image src="images/LabelConfirmation2.png" width="250px" tooltip="label confirmation" class="spacingBetweenTextAndImage"/>
					<Text text="{i18n>LabelWarningMessage2}" class="sapUiTinyMargin" textAlign="Center"/>
				</items>
				<f:SimpleForm>
					<Label text="{i18n>LabelIdentifierlbl}" labelFor="CodeLabel" design="Bold"/>
					<ComboBox width="250px">
						<core:Item key="1" text="I"/>
						<core:Item key="2" text="II"/>
						<core:Item key="3" text="III"/>
					</ComboBox>
					<Button id="codeSubmit" text="{i18n>LabelButtonContinue}"/>
				</f:SimpleForm>
				<Text text="{i18n>problemsHome}" class="sapUiSmallMargin"></Text>
				<Link href="https://zeroplasticrivers.com/" target="_blank" text="{i18n>linkHome}" class="sapUiSmallMarginBottom underline"/>
			</FlexBox>
		</l:content>
	</l:VerticalLayout>
</mvc:View>