<mvc:View 
	controllerName="opensap.recycle.controller.Home" 
	xmlns:mvc="sap.ui.core.mvc" 
	displayBlock="true"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m">
	
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<l:VerticalLayout>
							<FlexBox
								alignItems="Center"
								justifyContent="Center"
								direction="Column">
									<items>
											<Text text="{i18n>header}" class="sapUiSmallMargin header"></Text>
											<Text text="{i18n>paraHome}" class="sapUiSmallMargin"></Text>
											<l:HorizontalLayout>
													<Image src="images/Label.PNG" alt="Label example" width="140px" class="sapUiSmallMargin"></Image>
													<Image src="images/Ring.PNG" alt="Ring example" width="140px" class="sapUiSmallMargin"></Image>
											</l:HorizontalLayout>
											<Text text="{i18n>objectSelection}" class="sapUiSmallMargin bold"></Text>
											<Button text="{i18n>labelbuttonlabel}" width="340px"></Button>
											<Button text="{i18n>labelButtonRing}" width="340px" press=".onPress"></Button>
											
											<Text text="{i18n>problemsHome}" class="sapUiSmallMargin"></Text>
											<Link text="{i18n>linkHome}" target="_blank" href="#" class="sapUiSmallMarginBottom underline"></Link>
									</items>
							</FlexBox>
						</l:VerticalLayout>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>