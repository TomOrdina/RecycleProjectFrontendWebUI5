<mvc:View 
	controllerName="opensap.recycle.controller.RingSecondPage"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form">

<l:VerticalLayout width="100%">
	<l:content>
		<FlexBox
			alignItems="Center"
			justifyContent="Center"
			direction="Column">
				<items>
						<Text text="{i18n>headerRingSecond}" class="sapUiSmallMargin header"/>
						<Text text="{i18n>paraRingSecond}" class="sapUiSmallMargin"></Text>
						<Image src="images/IdentifyCircle.PNG" alt="Label example" width="140px" class="sapUiSmallMargin"/>
						<f:SimpleForm>
			                <Label text="{i18n>RingSecondIdentifier}"/>
			            	<ComboBox placeholder="{i18n>RingSecondSelect}">
			                	<core:Item key="1" text="A"/>
			                	<core:Item key="2" text="B"/>
			                	<core:Item key="3" text="C"/>
			                </ComboBox>
			                <Button id="codeSubmit" text="{i18n>labelButtonContinue}" width="250px"/>
	                	</f:SimpleForm>
						<Text text="{i18n>problemsHome}" class="sapUiSmallMargin"></Text>
						<Link href="https://zeroplasticrivers.com/" target="_blank" text="{i18n>linkHome}" class="sapUiSmallMarginBottom underline"/>
				</items>
		</FlexBox>
	</l:content>
</l:VerticalLayout>
</mvc:View>