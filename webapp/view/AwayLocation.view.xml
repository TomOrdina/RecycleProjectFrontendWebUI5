<mvc:View 
	controllerName="opensap.recycle.controller.AwayLocation"
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	xmlns:l="sap.ui.layout" 
	xmlns:f="sap.ui.layout.form" >
	
	<l:VerticalLayout width="100%">
	    <l:content>
	        <FlexBox alignItems="Center" justifyContent="Center" direction="Column">
	            <items>
	                <Text text="{i18n>sendHeader}" class="sapUiTinyMargin header"/>
	                <Text text="{i18n>sendPara}" class=" headerLabel sapUiSmallMargin fontSize"/>
	                <Text id="coordinates" text="{i18n>coordinatesAway}" class="textBold sapUiSmallMargin red"/>
	                <HBox id="map_canvas" width="80vw" height="55vh" ></HBox>
	                <Button id="SendLocation" text="{i18n>sendButton}" width="80vw" press="onPressAway"/>
	            </items>
	        </FlexBox>
	    </l:content>
    </l:VerticalLayout>
</mvc:View>