<mvc:View 
	controllerName="opensap.recycle.controller.SuccesView"
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
	xmlns:l="sap.ui.layout" 
	xmlns:f="sap.ui.layout.form" >

    <l:VerticalLayout width="100%">
    	<l:content>
    		<FlexBox alignItems="Center" justifyContent="Center" direction="Column">
	            <items>
	                <Text text="{i18n>ThankYouText}" class="sapUiTinyMargin header"/>
	                <Text text="{i18n>InformationRecieved}" class=" headerLabel sapUiSmallMargin fontSize"/>
	                <Text text="{i18n>ShareLocationNotBold}" class="sapUiSmallMargin fontSize" />
	                <Text text="{i18n>ShareLocationBold}" class="textBold sapUiSmallMargin fontSize"/>
	                <Button id="ShareSubmit" text="{i18n>ShareButtonText}" press="sendLocation" class="sapUiSmallMargin buttonSingle"/>
	                <Button id="NoLocationSubmit" text="{i18n>NoLocationButtonText}" press="awayLocation" class="sapUiSmallMargin buttonSingle"/>
	                <Text text="{i18n>LocationExplanationText}" class="sapUiSmallMargin fontSize"/>
	                <Text text="{i18n>ExtraInfoLocationText}" class="sapUiSmallMargin textBold fontSize"/>
	            </items>
            </FlexBox>
        </l:content>
    </l:VerticalLayout>
</mvc:View>