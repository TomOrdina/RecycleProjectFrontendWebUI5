<mvc:View 
	controllerName="opensap.recycle.controller.LabelFirstPage" 
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
	xmlns:l="sap.ui.layout" 
	xmlns:f="sap.ui.layout.form">
	<!--tekts-->
	<l:VerticalLayout width="100%">
		<l:content>
			<FlexBox alignItems="Center" justifyContent="Center" direction="Column">
				<items>
					<Text text="{i18n>LabelCode}" class="sapUiSmallMargin header"/>
					<Text text="{i18n>LabelFindCode}" class="sapUiSmallMargin fontSize"/>
					<Image src="./images/LabelConfirmation1.png" tooltip="label confirmation" class="sapUiSmallMargin picLabel"/>
					<Text text="{i18n>LabelWarningMessage}" class="sapUiSmallMargin fontSize" textAlign="Center"/>
					<f:SimpleForm>
						<FlexBox alignItems="Center" justifyContent="Center" direction="Column">
							<items>
								<Label text="{i18n>LabelCodelbl}" labelFor="CodeLabel" class="bold fontSize"/>
								<Input id="name" placeholder="{i18n>LabelCodeInput}" maxLength="4" submit=".onPress" width="80vw"/>
								<Button id="codeSubmit" text="{i18n>LabelButtonContinue}" press=".onPress"  width="80vw" />
							</items>
						</FlexBox>
					</f:SimpleForm>
				</items>
				<Text text="{i18n>problemsHome}" class="sapUiSmallMarginBottom fontSize"></Text>
				<Link href="https://zeroplasticrivers.com/" target="_blank" text="{i18n>linkHome}" class="sapUiSmallMarginBottom underline fontSize"/>
			</FlexBox>
		</l:content>
	</l:VerticalLayout>
</mvc:View>