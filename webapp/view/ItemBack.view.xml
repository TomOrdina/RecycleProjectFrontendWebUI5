<mvc:View 
	controllerName="opensap.recycle.controller.ItemBack"
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
	xmlns:l="sap.ui.layout" 
	xmlns:f="sap.ui.layout.form" >

    <FlexBox class="pageBack">
    <FlexBox class="screen" direction="Column">
    	<Text text="{i18n>backHeader}" class="sapUiTinyMargin header"/>
        <Text text="{i18n>backPara}" class=" headerLabel sapUiSmallMargin fontSize"/>
        <Text text="{i18n>backLocation}" class="sapUiTinyMargin fontSize bold" />
        <Text id="coordinatesOne" text="" class="sapUiTinyMargin"/>
        <Text id="coordinatesTwo" text="" class="sapUiTinyMargin"/>
        <FlexBox alignItems="Center" justifyContent="Center" direction="Column">
            <items>
                <HBox id="map_canvas" width="80vw" height="41vh"></HBox>
                <Button id="shareSubmit" text="{i18n>backButton}" press="onPress" width="80vw" />
                <Link href="https://zeroplasticrivers.com/" target="_blank" text="{i18n>backUnable}" class="sapUiSmallMargin textBold fontSize underline"/>
            </items>
            </FlexBox>
        </FlexBox>
    </FlexBox>
</mvc:View>