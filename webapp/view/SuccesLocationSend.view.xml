<mvc:View 
	controllerName="opensap.recycle.controller.SuccesLocationSend" 
	xmlns:mvc="sap.ui.core.mvc" 
	displayBlock="true"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m">
	
	<Shell id="shell">
		<App id="app">
			<l:VerticalLayout width="100%" class="sapUiResponsiveContentPadding">
				<FlexBox
					alignItems="Center"
					justifyContent="Center"
					direction="Column">
						<items>
								<FlexBox class="succes">
									<items>
										<VBox justifyContent="Center">
											<Text text="{i18n>thankYou}" class="sapUiSmallMargin header"></Text>
											<Text text="{i18n>sendDone}" class="sapUiSmallMargin fontSize"></Text>
										</VBox>
										<Image src="./images/ZeroPlasticRivers.png" alt="Label example" class="sapUiSmallMargin picLogo"></Image>
									</items>
								</FlexBox>
								<HBox id="map_canvas" width="80vw" height="41vh" />
								<Text text="{i18n>visitHome}" class="sapUiSmallMargin fontSize"></Text>
								<Link href="https://zeroplasticrivers.com/" target="_blank" text="{i18n>linkHomeDone}" class="sapUiSmallMarginBottom underline fontSize"/>
						</items>
				</FlexBox>
			</l:VerticalLayout>
		</App>
	</Shell>
</mvc:View>